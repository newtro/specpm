{
  "name": "eslint-plugin-specpm",
  "version": "0.0.1",
  "type": "module",
  "description": "ESLint plugin for SpecPM spec compliance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
